pipelineJob("update-esm-landscape") {

    description """
        This job create new PR on selected landscape dev repo, with the latest product state.
    """

    parameters {
        stringParam('GITHUB_REPO', "", "Name of repository in github.")
        DslUtils.gardenerLandscapeParameter(delegate)
        booleanParam("pull-request", false, "create new pr for the repo")

   }
   logRotator {
        numToKeep(50)
    }

    definition {
        cpsScm {
            DslUtils.pipelineScm(delegate, BUILD_URL)
            scriptPath('groovy/update-esm-landscape.groovy')
        }
    }

}